<configuration>
    <appender name="cloudwatch" class="com.ppn.ppn.utils.CloudWatchAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <root level="info">
        <appender-ref ref="cloudwatch"/>
    </root>
</configuration>